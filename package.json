{
	"name": "cobaltia",
	"version": "0.1.0",
	"description": "A template for TypeScript projects",
	"main": "dist/cobaltia.js",
	"type": "module",
	"imports": {
		"#lib/*": "./dist/lib/*.js",
		"#util/*": "./dist/lib/util/*.js",
		"#util/common": "./dist/lib/util/common/index.js",
		"#lib/types": "./dist/lib/types/index.js",
		"#lib/database": "./dist/lib/database/index.js",
		"#root/*": "./dist/*.js",
		"#structures/*": "./dist/lib/structures/*.js"
	},
	"scripts": {
		"build": "tsc -b src",
		"build:ci": "pnpm run prisma:push && pnpm exec prisma generate --sql && tsc -b src",
		"build:dev": "tsc -b src",
		"dev": "pnpm build:dev && pnpm start",
		"lint": "eslint --fix --ext ts src tests",
		"format": "prettier --write .",
		"start": "node --enable-source-maps dist/cobaltia.js",
		"postinstall": "husky || true",
		"prisma:push": "pnpm exec prisma generate && prisma db push",
		"test": "vitest run",
		"test:format": "prettier --check ."
	},
	"repository": "git@github.com:cobaltia/cobaltia.git",
	"author": "JuanPablo2655 <personal@isidrocasiano.com>",
	"license": "MIT",
	"private": true,
	"dependencies": {
		"@discordjs/core": "^2.4.0",
		"@prisma/client": "^6.12.0",
		"@sapphire/decorators": "^6.2.0",
		"@sapphire/discord.js-utilities": "^7.3.3",
		"@sapphire/fetch": "^3.0.5",
		"@sapphire/framework": "^5.5.0",
		"@sapphire/plugin-api": "^8.3.1",
		"@sapphire/plugin-pattern-commands": "^6.0.3",
		"@sapphire/plugin-scheduled-tasks": "^10.0.4",
		"@sapphire/plugin-subcommands": "^7.0.1",
		"@sapphire/ratelimits": "^2.4.11",
		"@sapphire/result": "^2.8.0",
		"@sapphire/stopwatch": "^1.5.4",
		"@sapphire/time-utilities": "^1.7.14",
		"@sapphire/utilities": "^3.18.2",
		"@skyra/env-utilities": "^2.0.1",
		"@skyra/jaro-winkler": "^1.1.1",
		"dayjs": "^1.11.13",
		"diff": "^8.0.3",
		"discord-api-types": "^0.38.38",
		"discord.js": "^14.25.1",
		"dnd5e-dice-roller": "^0.0.15",
		"ioredis": "^5.9.2",
		"prom-client": "^15.1.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.4.0",
		"@commitlint/config-angular": "^20.4.0",
		"@types/diff": "^8.0.0",
		"@types/eslint": "^9.6.1",
		"@types/node": "^25.1.0",
		"@vitest/coverage-v8": "^1.6.0",
		"eslint": "^9.39.2",
		"eslint-config-neon": "^0.3.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"prisma": "^6.12.0",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vitest": "^1.6.0"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write",
		"*.{.mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"volta": {
		"node": "20.11.0"
	}
}
