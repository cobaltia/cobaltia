{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": ".",
		"noEmit": true,
		"types": ["vitest/globals"],
		"paths": {
			"#lib/*": ["../src/lib/*"],
			"#root/*": ["../src/*"],
			"#util/*": ["../src/lib/util/*"]
		}
	},
	"include": [".", "../src"],
	"references": [{ "path": "../src" }]
}
